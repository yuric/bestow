<!DOCTYPE html>
<html>
<head>
  <title>Doutdes01</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

		<script type="text/javascript">
		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-21087254-4']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();
		</script>

</head>
<BODY>
	<div id='pagewrapper'>
		<div id='header'>
			<p>Doutdes: Give so others may give</p>	

		</div>
		<div id='navbar'>
			<ul>
				<li><%= link_to 'HOME-Coupons', outside_viewerLinkeage_path( 'coupons' ) %> </li>
				<li><%= link_to 'ABOUT-SpAlrt', outside_viewerLinkeage_path( 'simplealerts' ) %></li>
				<li><%= link_to 'BusForm', outside_viewerLinkeage_path( 'businessforms' ) %></li>
				<li><a href="/users/registration/sign_up">Sign Up</a></li>
				
				<%if user_signed_in? && current_user.admin?%>
				  <li><%= link_to 'Administrator', outside_viewerLinkeage_path( 'administrator' ) %></li>
				<%end%>
			<div id="user_nav">
				<% if user_signed_in? %>
				    Signed in as <%= current_user.username %> (<%= current_user.email %>). Not you?
				    <%= link_to " Sign out", destroy_user_session_path %>
				  <% else %>
				    <%= link_to " Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %>
				  <% end %>			</div>
			</ul>
			
	</div>
	<div id= 'content'>
		<%if flash[:error]%>
			<p id="error_explanation"><%=flash[:error]%></p>  
		<%end%> 
	<%= yield %>
	</div>
	<div id='footer'>
		<p>Yuri Costa | coxaqui@gmail.com</p>
	</div>
	
	
</BODY>
</html>
