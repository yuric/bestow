<% if current_user %>
  <div class="group", style="display:none">
    <%= f.label :user_login, t("activerecord.attributes.businessform.user_login", :default => "User login"), :class => :label %>
	<% if current_user && !current_user.admin?%>
        <%= f.text_field :user_login,:readonly => true, :value => current_user.username || "Invalid", :class => 'text_field' %>
    <%elsif current_user && current_user.admin?%>
        <%= f.text_field :alert_owner, :value => current_user.username,:class => 'text_field' %> 
    <%else%>
        <%= f.text_field :alert_owner, :readonly => true, :value => "Invalid",:class => 'text_field' %>
	<%end%>
  </div>
<%end%>

