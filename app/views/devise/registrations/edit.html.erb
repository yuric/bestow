<div id ="box">

<div class ="block", id= "block-signup">
	  <h2>Profile</h2><br/>

  <div class="content login">
	
    <div class="flash">
      <% flash.each do |type, message| %>
        <div class = "message error">
          <p><%= message %></p>
        </div>
	 <%end%>
    </div>

	<%= form_for(resource_name, resource, :url => registration_path(resource_name), :html => {:method => :put, :class => "form signup" }) do |f| %>


	  <div class="group wat-cf">
        <div class="left"><%= f.label :email, :class => "label right" %></div>
        <div class="right"><%= f.text_field :email, :class => "text_field" %></div>
      </div>

      <div class="group wat-cf">
        <div class="left"><%= f.label :password, :class => "label right" %></div>
        <div class="right"><%= f.password_field :password, :class => "text_field" %><i>(leave blank if you don't want to change it)</i></div>
      </div>

	  <div class="group wat-cf">
        <div class="left"><%= f.label :password_confirmation, :class => "label right" %></div>
        <div class="right"><%= f.password_field :password_confirmation, :class => "text_field" %></div>
      </div>

	  <div class="group wat-cf">
        <div class="left"><%= f.label :current_password, :class => "label right" %></div>
        <div class="right"><%= f.password_field :current_password, :class => "text_field" %><i>(we need your current password to confirm your changes)</i></div>
      </div>

      <div class="group wat-cf">
        <div class="right">
          <button class="button" type ="submit">
            <%= image_tag "web-app-theme/icons/tick.png" %>
            Update
          </button>
        </div>
      </div>
	<%end%>
    <%= render :partial => "devise/shared/links"%>

</div>
</div>
</div>









