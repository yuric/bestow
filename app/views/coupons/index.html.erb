<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", coupons_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_coupon_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Coupons</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.coupon.address_line1", :default => t("activerecord.labels.address_line1", :default => "Address_line1")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @coupons.each do |coupon| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= coupon.id %>
          </td>
                    <td>
            <%= link_to coupon.address_line1, coupon_path(coupon) %>
          </td>
                    <td>
            <%= coupon.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", coupon_path(coupon) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_coupon_path(coupon) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", coupon_path(coupon), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
		  <div clas="page_info">
		    <%= page_entries_info @coupons %>
		  	<%= will_paginate @coupons, :container => true %>
		  </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
