<% if @simplealert.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@simplealert.errors.count, "error") %> prohibited this email alert from being saved:</h2>

    <ul>
    <% @simplealert.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@simplealert) do |f| %>

  <div class="group">
    <%= f.label :email, t("activerecord.attributes.simplealert.email", :default => "Email"), :class => :label %>
    <%= f.text_field :email, :class => 'text_field' %>

    <%= f.label :location_zip, t("activerecord.attributes.simplealert.location_zip", :default => "Zipcode"), :class => :label %>
    <%= f.text_field :location_zip, :class => 'text_field', :size => 14 %>
  </div>
  <% if current_user %>
  <div class="field" style="display:none"><!--I hide this because I want to save with User info but Without displaying-->
        <%= f.label :alert_owner %> 
            <% if current_user && !current_user.admin?%>
                <%= f.text_field :alert_owner,:readonly => true, :value => current_user.username || "Invalid" %>
            <%elsif current_user && current_user.admin?%>
                <%= f.text_field :alert_owner, :value => current_user.username %> 
            <%else%>
                <%= f.text_field :alert_owner, :readonly => true, :value => "Invalid" %>
        <%end%>
        <% else %>
            <%= f.label :alert_owner %>
            <%= f.text_field :alert_owner, :readonly => true, :value => "Guest" %>
            <li><a href="<%= new_user_registration_path %>">Sign up</a> or <a href="<%= new_user_session_path %>"> Sign In</a> to manage multiple alerts</li><br/>
        <%end%>
  </div><br/>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Subscribe") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
    <%= link_to t("web-app-theme.cancel", :default => "Cancel"), root_path, :class => "text_button_padding link_button" %>
</div>

<% end %>
