Updating Admin
User.find(4).update_attribute(:admin, true)
rails generate migration change_data_type_for_widget_count
rails generate migration add_business_form_owner_to_business_form
		def self.up
		  add_column :business_form, :business_form_owner, :string
		end

		def self.down
		  remove_column :business_form, :business_form_owner
		end
